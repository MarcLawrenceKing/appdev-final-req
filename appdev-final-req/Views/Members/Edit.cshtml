@{
    ViewData["Title"] = "Edit Member";
}
@model appdev_final_req.Models.Entitiess.Member

<!-- Poppins & Bootstrap -->
<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

<style>
    :root {
        --blue: #0d6efd;
        --light-bg: #ffffff;
        --dark-bg: #0a0a0a;
        --card-dark-bg: #1c1e21;
        --text-light: #ffffff;
    }

    body {
        font-family: 'Poppins', sans-serif;
        background-color: var(--light-bg);
        transition: all 0.3s ease;
    }

    h1 {
        font-weight: 600;
        text-align: center;
        margin-top: 30px;
        color: black;
    }

    .form-container {
        max-width: 600px;
        margin: 40px auto;
        padding: 30px;
        border: 2px solid var(--blue);
        border-radius: 20px;
        box-shadow: 0 6px 16px rgba(0, 0, 0, 0.05);
        background-color: white;
    }

    .form-label {
        font-weight: 500;
    }

    .btn-primary {
        background-color: var(--blue);
        border-color: var(--blue);
        font-weight: 500;
    }

        .btn-primary:hover {
            background-color: #0b5ed7;
            border-color: #0a58ca;
        }

    .dark-mode body {
        background-color: var(--dark-bg);
        color: var(--text-light);
    }

    .dark-mode .form-container {
        background-color: var(--card-dark-bg);
        border-color: var(--blue);
    }

    .dark-mode .form-control {
        background-color: #121212;
        color: var(--text-light);
        border: 1px solid var(--blue);
    }

    .dark-mode .form-label {
        color: var(--text-light);
    }
</style>

<h1>👤 Edit Member</h1>

@if (Model is null)
{
    <p class="text-center text-danger">No member found with this ID!</p>
}
else
{
    <div class="form-container">
        <form method="post">
            <div class="mt-3">
                <label class="form-label">Id</label>
                <input type="text" class="form-control" asp-for="Id" readonly />
            </div>
            <div class="mt-3">
                <label class="form-label">Full Name</label>
                <input type="text" class="form-control" asp-for="FullName" required />
            </div>
            <div class="mt-3">
                <label class="form-label">Email</label>
                <input type="text" class="form-control" asp-for="Email" required />
            </div>
            <div class="mt-3">
                <label class="form-label">Phone</label>
                <input type="text" class="form-control" asp-for="Phone" required />
            </div>
            <div class="mt-3">
                <label class="form-label">Birthdate</label>
                <input type="date" class="form-control" asp-for="Birthdate" required />
            </div>
            <div class="d-flex justify-content-between mt-4">
                <button type="submit" class="btn btn-success px-4 py-2">Save</button>
                <a asp-controller="Members" asp-action="List" class="btn btn-primary px-4 py-2">Back</a>
            </div>
        </form>
    </div>
}
