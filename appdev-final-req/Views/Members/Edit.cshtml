@{
	ViewData["Title"] = "Edit Member";
}
@model appdev_final_req.Models.Entitiess.Member //ito ung gagamitin na model for this page

<h1> Edit Student </h1>

@if (Model is null)
{
	<p> No student found with this id!</p>
}

<form method="post">
	<div class="mt-3">
		<label class="form-label">Id</label>
		<input type="text" class="form-control" asp-for="Id" readonly />
	</div>
	<div class="mt-3">
		<label class="form-label">Full Name</label>
		<input type="text" class="form-control" asp-for="FullName" />
	</div>
	<div class="mt-3">
		<label class="form-label">Email</label>
		<input type="text" class="form-control" asp-for="Email" />
	</div>
	<div class="mt-3">
		<label class="form-label">Phone</label>
		<input type="text" class="form-control" asp-for="Phone" />
	</div>
	<div class="mt-3">
		<label class="form-label">Birthdate</label>
		<input type="date" class="form-control" asp-for="Birthdate" />
	</div>
	<div class="mt-3">
		<button type="submit" class="btn btn-primary">Save</button>
	</div>
</form>
