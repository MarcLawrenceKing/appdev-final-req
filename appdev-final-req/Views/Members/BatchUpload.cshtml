@{
    ViewData["Title"] = "Batch Upload";
}
@model appdev_final_req.Models.AddMemberViewModel

<!-- Poppins Font and Bootstrap -->
<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

<!-- Custom Styling -->
<style>
    body {
        font-family: 'Poppins', sans-serif;
        background-color: var(--light-bg, #ffffff);
        color: var(--bs-body-color, #212529);
        transition: all 0.3s ease;
    }

    h1 {
        font-weight: 600;
        color: #5C9EFF; /* cute blue */
        text-align: center;
    }

    .form-label {
        font-weight: 500;
    }

    .btn-upload {
        background-color: #63c98d; /* cute green */
        border: none;
        color: white;
        font-weight: 500;
        transition: background-color 0.3s ease;
    }

        .btn-upload:hover {
            background-color: #4fb476;
        }

    .btn-back {
        background-color: #5C9EFF; /* cute blue */
        border: none;
        color: white;
        font-weight: 500;
        transition: background-color 0.3s ease;
    }

        .btn-back:hover {
            background-color: #4e94f0;
        }

    .card-upload {
        border: 2px dashed #5C9EFF;
        padding: 2rem;
        border-radius: 1rem;
        background-color: #f9f9f9;
    }

    .dark-mode body {
        background-color: #0a0a0a;
        color: #ffffff;
    }

    .dark-mode .card-upload {
        background-color: #1c1e21;
        border-color: #5C9EFF;
    }

    .dark-mode .form-control {
        background-color: #1c1e21;
        color: #ffffff;
        border-color: #5C9EFF;
    }

    .dark-mode .form-label {
        color: #ffffff;
    }

    .dark-mode .btn-upload {
        background-color: #63c98d;
    }

        .dark-mode .btn-upload:hover {
            background-color: #4fb476;
        }

    .dark-mode .btn-back {
        background-color: #5C9EFF;
    }

        .dark-mode .btn-back:hover {
            background-color: #4e94f0;
        }

    .alert-info {
        border: 1px solid #5C9EFF;
    }

    .dark-mode .alert-info {
        background-color: #0a0a0a;
        color: #ffffff;
        border: 1px solid #5C9EFF;
    }
</style>

<h1>@ViewData["Title"]</h1>

<div class="container mt-4">
    <div class="card-upload">
        <form asp-controller="Members" asp-action="BatchUpload" method="post" enctype="multipart/form-data">
            <div class="mb-3">
                <label for="file" class="form-label">Select CSV File</label>
                <input type="file" class="form-control" name="file" id="file" accept=".csv" required />
            </div>

            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-upload">Upload</button>
                <a asp-controller="Members" asp-action="List" class="btn btn-back">Back</a>
            </div>
        </form>

        @if (!string.IsNullOrEmpty(ViewBag.Message as string))
        {
            <div class="alert alert-info mt-3">@ViewBag.Message</div>
        }
    </div>
</div>
