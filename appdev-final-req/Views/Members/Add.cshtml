@{
	ViewData["Title"] = "Add Member";
}
@model appdev_final_req.Models.AddMemberViewModel //ito ung gagamitin na model for this page

<h1>@ViewData["Title"]</h1>

<form method="post">
	<div class="mt-3">
		<label class="form-label">Full Name</label>
		<input type="text" class="form-control" asp-for="FullName" required/>
	</div>
	<div class="mt-3">
		<label class="form-label">Email</label>
		<input type="text" class="form-control" asp-for="Email" required />
	</div>
	<div class="mt-3">
		<label class="form-label">Phone</label>
		<input type="text" class="form-control" asp-for="Phone" required />
	</div>
	<div class="mt-3">
		<label class="form-label">Birthdate</label>
		<input type="date" class="form-control" asp-for="Birthdate" required />
	</div>
	<div class="mt-3">
		<button type="submit" class="btn btn-primary"> Save</button>
	</div>
</form>
