@{
    ViewData["Title"] = "Edit Event";
}
@model appdev_final_req.Models.Entitiess.Event

<style>
    :root[data-bs-theme='light'] {
        --page-bg: #ffffff;
        --card-bg: #ffffff;
        --text-color: #212529;
        --input-bg: #ffffff;
        --input-border: #ced4da;
        --blue: #0d6efd;
    }

    :root[data-bs-theme='dark'] {
        --page-bg: #212529;
        --card-bg: #1e1e2f;
        --text-color: #ffffff;
        --input-bg: #121212;
        --input-border: #6aa5f8;
        --blue: #6aa5f8;
    }

    h1 {
        font-weight: 600;
        text-align: center;
        margin-top: 30px;
    }

    .form-container {
        max-width: 600px;
        margin: 40px auto;
        padding: 30px;
        border: 2px solid var(--blue);
        border-radius: 20px;
        box-shadow: 0 6px 16px rgba(0, 0, 0, 0.05);
        background-color: var(--card-bg);
    }

    .form-label {
        font-weight: 500;
        color: var(--text-color);
    }

    .form-control {
        background-color: var(--input-bg);
        color: var(--text-color);
        border: 1px solid var(--input-border);
        transition: background-color 0.3s ease, color 0.3s ease;
    }

    .form-control:focus {
        border-color: var(--blue);
        box-shadow: 0 0 0 0.2rem rgba(13, 110, 253, 0.25);
    }

    .btn-primary {
        background-color: var(--blue);
        border-color: var(--blue);
        font-weight: 500;
    }

    .btn-primary:hover {
        background-color: #0b5ed7;
        border-color: #0a58ca;
    }

    .btn-secondary,
    .btn-success {
        font-weight: 500;
    }
</style>

<h1>🗓️ Edit Event</h1>

@if (Model is null)
{
    <p class="text-center text-danger">No event found with this ID!</p>
}
else
{
    <div class="form-container">
        <form method="post">
            <input type="hidden" asp-for="Id" />
            <div class="mt-3">
                <label class="form-label">Title</label>
                <input type="text" class="form-control" asp-for="Title" required />
            </div>
            <div class="mt-3">
                <label class="form-label">Description</label>
                <textarea class="form-control" asp-for="Description" rows="3" required></textarea>
            </div>
            <div class="mt-3">
                <label class="form-label">Event Date</label>
                <input type="date" class="form-control" asp-for="EventDate" required />
            </div>
            <div class="d-flex justify-content-between mt-4">
                <button type="submit" class="btn btn-success px-4 py-2">Save</button>
                <a asp-controller="Events" asp-action="List" class="btn btn-secondary px-4 py-2">Cancel</a>
            </div>
        </form>
    </div>
}
