@{
	ViewData["Title"] = "Edit Event";
}
@model appdev_final_req.Models.Entitiess.Event //ito ung gagamitin na model for this page

<h1>@ViewData["Title"]</h1>

@if (Model is null)
{
	<p> No student found with this id!</p>
}

<form method="post">
	<div class="mt-3">
		<label class="form-label">Id</label>
		<input type="text" class="form-control" asp-for="Id" readonly />
	</div>
	<div class="mt-3">
		<label class="form-label">Title</label>
		<input type="text" class="form-control" asp-for="Title" required />
	</div>
	<div class="mt-3">
		<label class="form-label">Description</label>
		<input type="text" class="form-control" asp-for="Description" required />
	</div>
	<div class="mt-3">
		<label class="form-label">EventDate</label>
		<input type="date" class="form-control" asp-for="EventDate" required />
	</div>

	<div class="mt-3">
		<button type="submit" class="btn btn-primary">Save</button>
	</div>
</form>
