@{
    ViewData["Title"] = "Mark Attendance";
}
@model List<appdev_final_req.Models.AttendanceViewModel>

@{
    var eventId = (int)ViewBag.EventId;
    bool isSaved = ViewBag.Saved ?? false;
}

<!-- Poppins & Bootstrap -->
<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

<style>
    body {
        font-family: 'Poppins', sans-serif;
    }

    .form-check-input.custom-check:checked {
        background-color: #198754; /* green */
        border-color: #198754;
    }

    .search-bar {
        max-width: 250px;
    }
</style>

<h1 style="text-align: center; font-family: 'Poppins', sans-serif">📝 Mark Attendance</h1>
<p style="text-align: center;">Mark attendance for <strong>@ViewBag.EventTitle</strong></p>

@if (!isSaved)
{
    <form asp-action="MarkAttendance" method="post">
        <input type="hidden" name="eventId" value="@eventId" />

        <div class="d-flex justify-content-between align-items-center mb-3">
            <div class="d-flex search-bar" role="search">
                <input class="form-control me-2" type="search" name="search" placeholder="Search" value="@Context.Request.Query["search"]" />
                <button class="btn btn-outline-primary" type="submit">🔍</button>
            </div>
        </div>

        <table class="table table-bordered border-primary rounded-2 mt-2" style="font-family: 'Poppins', sans-serif">
            <thead class="table-primary">
                <tr>
                    <th>Member ID</th>
                    <th>Member</th>
                    <th class="text-center">Present (✔️)</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.Count; i++)
                {
                    var item = Model[i];
                    <tr>
                        <td>@item.MemberId</td>
                        <td>@item.FullName</td>
                        <td class="text-center">
                            <input type="hidden" name="attendanceList[@i].MemberId" value="@item.MemberId" />
                            <input style="transform: scale(1.5);" class="form-check-input custom-check present-checkbox" type="checkbox" name="attendanceList[@i].IsPresent" value="true" @(item.IsPresent ? "checked" : "") />
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="d-flex justify-content-between mt-4">
            <button class="btn btn-success px-4 py-2" type="submit">Save</button>
            <a asp-controller="Attendance" asp-action="List" class="btn btn-secondary px-4 py-2">Cancel</a>
        </div>
    </form>
}
else
{
    <h5 class="mt-4">✅ Present Members</h5>
    <table class="table table-bordered border-success rounded-2 mt-2" style="font-family: 'Poppins', sans-serif">
        <thead class="table-success">
            <tr>
                <th>Member ID</th>
                <th>Member</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Where(m => m.IsPresent))
            {
                <tr>
                    <td>@item.MemberId</td>
                    <td>@item.FullName</td>
                </tr>
            }
        </tbody>
    </table>

    <h5 class="mt-4">❌ Absent Members</h5>
    <table class="table table-bordered border-danger rounded-2 mt-2" style="font-family: 'Poppins', sans-serif">
        <thead class="table-danger">
            <tr>
                <th>Member ID</th>
                <th>Member</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Where(m => !m.IsPresent))
            {
                <tr>
                    <td>@item.MemberId</td>
                    <td>@item.FullName</td>
                </tr>
            }
        </tbody>
    </table>

    <div class="mt-4 text-center">
        <a asp-controller="Attendance" asp-action="List" class="btn btn-secondary px-4 py-2">Back to Events</a>
    </div>
}

@section Scripts {
    <script>
        // No additional script needed for now
    </script>
}
