@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>AttendanceMo'To</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;700&display=swap" rel="stylesheet">


    <!-- Bootstrap 5 CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        body {
            font-family: 'Poppins', sans-serif;
            background-color: white;
        }

        .hero-section {
            min-height: 100vh;
            display: flex;
            align-items: center;
        }

        .highlight {
            background: radial-gradient(circle, #fff8c7 0%, #ffffff 90%);
            padding: 30px;
            border-radius: 12px;
        }

        .hero-title {
            font-weight: 700;
            font-size: 2.2rem;
            color: #204081;
        }

        .hero-desc {
            font-size: 0.95rem;
            margin-top: 15px;
            color: #578FCA;
        }

        .btn-custom {
            width: 110px;
            margin-right: 10px;
        }

        img.hero-img {
            max-width: 100%;
            height: auto;
        }

        .nav-link {
            color: #204081 !important;
            font-weight: 500;
        }

        .navbar-brand {
            font-weight: 700;
            color: #204081 !important;
        }
    </style>
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg bg-white shadow-sm px-4">
        <a class="navbar-brand" href="#">AttendanceMo'To</a>
        <div class="collapse navbar-collapse justify-content-end">
            <ul class="navbar-nav">

                <!--Di naman na need pa lagyan  -->
                <!-- <li class="nav-item"><a class="nav-link" href="#">Home</a></li>
                <li class="nav-item"><a class="nav-link" href="#">About</a></li>
                <li class="nav-item"><a class="nav-link" href="#">Contact</a></li> -->
            </ul>
        </div>
    </nav>

    <!-- Hero Section -->
    <div class="container hero-section">
        <div class="row align-items-center">
            <!-- Left Content -->
            <div class="col-md-6 ps-md-5">
                <div class="highlight text-center text-md-start">
                    <h1 class="hero-title">AttendanceMo'To:<br>Your go-to for precise and easy tracking.</h1>
                    <p class="hero-desc">
                        AttendanceMo'To is designed to help schools, offices, or organizations record attendance accurately, efficiently, and in real-time. Whether you're managing a small team or hundreds of people, we make the process easier, faster, and more reliable.
                        <br><br>
                        No more lost records or time wastedâ€”we help you focus on productivity, not paperwork. Our user-friendly platform makes attendance tracking accessible anytime, anywhere.
                    </p>
                    <div class="mt-4">                        
                        <a asp-controller="Users" asp-action="Register" class="btn btn-outline-primary btn-custom">Register</a>
                        <a asp-controller="Users" asp-action="Login" class="btn btn-outline-primary btn-custom">Login</a>                        
                    </div>
                </div>
            </div>

            <!-- Yung image sa right side -->
                <div class="col-md-6 text-center">
                    <img src="~/images/Frame1.png" alt="Hero Image" class="hero-img" />
            </div>
        </div>
    </div>

    <!-- Dont delete Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>



