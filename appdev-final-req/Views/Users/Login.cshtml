@{
    ViewData["Title"] = "Login";
}

@model appdev_final_req.Models.LoginViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background-color: #f8f9fa;
            font-family: 'Poppins', sans-serif;
        }

        .form-container {
            border: 2px solid #204081;
            border-radius: 10px;
            background-color: white;
            padding: 30px;
            max-width: 420px;
            margin: 100px auto;
        }

        .btn-blue {
            background-color: #204081;
            color: white;
            border: none;
        }

            .btn-blue:hover {
                background-color: #204081;
            }

        .toggle-link {
            color: #0d6efd;
            text-decoration: none;
        }

            .toggle-link:hover {
                text-decoration: underline;
            }
    </style>
</head>
<body>
    <div class="form-container">
        <h3 class="text-center mb-4">@ViewData["Title"]</h3>
        <form asp-action="Login" method="post">
            <div class="mb-3">
                <label asp-for="Username" class="form-label">Username</label>
                <input class="form-control" asp-for="Username" required />
            </div>
            <div class="mb-3">
                <label asp-for="Password" class="form-label">Password</label>
                <input class="form-control" asp-for="Password" type="password" required />
            </div>
            <div class="d-grid mb-2">
                <button type="submit" class="btn btn-blue">Login</button>
            </div>
            <div class="text-center">
                <p>
                    Don't have an account?
                    <a asp-controller="Users" asp-action="Register" class="toggle-link">Register</a>
                </p>
            </div>
        </form>
    </div>

    <!-- Modal popup when login fails -->
    <div class="modal fade" id="loginErrorModal" tabindex="-1" aria-labelledby="loginErrorModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title" id="loginErrorModalLabel">Login Failed</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    @ViewData["LoginError"]
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>

    @section Scripts {
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
        <script>
            document.addEventListener("DOMContentLoaded", function () {
                var errorExists = `@ViewData["LoginError"]` !== ``;
                if (errorExists) {
                    var myModal = new bootstrap.Modal(document.getElementById('loginErrorModal'));
                    myModal.show();
                }
            });
        </script>
    }
</body>
</html>
